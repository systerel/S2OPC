<?xml version='1.0' encoding='utf-8'?>
<S2OPC xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="s2opc_config.xsd">
  <ServerConfiguration>
    <Namespaces>
      <Namespace uri="urn:S2OPC:localhost"/>
    </Namespaces>
    <Locales>
      <Locale id="en-US"/>
      <Locale id="fr-FR"/>
    </Locales>
    <ApplicationCertificates>
      <ServerCertificate path="./server_public/server_2k_cert.der"/>
      <ServerKey path="./server_private/server_2k_key.pem"/>
      <TrustedCertificates>
        <TrustedCertificate path="trusted/cacert.der"/>
        <TrustedCertificate path="trusted/ctt_ca1I_appT.der"/>
        <TrustedCertificate path="trusted/ctt_ca1T.der"/>
        <TrustedCertificate path="trusted/ctt_appT.der"/>
        <TrustedCertificate path="trusted/ctt_appTSha256_2048.der"/>
        <TrustedCertificate path="trusted/ctt_appTSha256_4096.der"/>
      </TrustedCertificates>
      <RevokedCertificates>
        <RevokedCertificate path="revoked/cacrl.der"/>
        <RevokedCertificate path="revoked/revocation_list_ctt_ca1T.crl"/>
        <RevokedCertificate path="revoked/ctt_appT_crl.pem"/>
        <RevokedCertificate path="revoked/ctt_appTSha256_2048_crl.pem"/>
        <RevokedCertificate path="revoked/ctt_appTSha256_4096_crl.pem"/>
      </RevokedCertificates>
    </ApplicationCertificates>
    <ApplicationDescription>
      <ApplicationURI uri="urn:S2OPC:localhost"/>
      <ProductURI uri="urn:S2OPC:localhost"/>
      <ApplicationName text="S2OPC toolkit server example" locale="en-US"/>
      <ApplicationName text="S2OPC toolkit: exemple de serveur" locale="fr-FR"/>
    </ApplicationDescription>
    <Endpoints>
      <Endpoint url="opc.tcp://localhost:4841">
        <SecurityPolicies>
          <SecurityPolicy uri="http://opcfoundation.org/UA/SecurityPolicy#Basic256Sha256">
            <SecurityModes>
              <SecurityMode mode="Sign"/>
              <SecurityMode mode="SignAndEncrypt"/>
            </SecurityModes>
            <UserPolicies>
              <UserPolicy policyId="anonymous" tokenType="anonymous"/>
              <UserPolicy policyId="username" tokenType="username" securityUri="http://opcfoundation.org/UA/SecurityPolicy#None"/>
            </UserPolicies>
          </SecurityPolicy>
          <SecurityPolicy uri="http://opcfoundation.org/UA/SecurityPolicy#Basic256">
            <SecurityModes>
              <SecurityMode mode="Sign"/>
              <SecurityMode mode="SignAndEncrypt"/>
            </SecurityModes>
            <UserPolicies>
              <UserPolicy policyId="anonymous" tokenType="anonymous"/>
              <UserPolicy policyId="username" tokenType="username" securityUri="http://opcfoundation.org/UA/SecurityPolicy#None"/>
            </UserPolicies>
          </SecurityPolicy>
          <SecurityPolicy uri="http://opcfoundation.org/UA/SecurityPolicy#None">
            <SecurityModes>
              <SecurityMode mode="None"/>
            </SecurityModes>
            <UserPolicies>
              <UserPolicy policyId="anonymous" tokenType="anonymous"/>
              <!-- For tests only, otherwise users on unsecure channel without security shall be forbidden -->
              <UserPolicy policyId="username" tokenType="username" securityUri="http://opcfoundation.org/UA/SecurityPolicy#None"/>
            </UserPolicies>
          </SecurityPolicy>
        </SecurityPolicies>
      </Endpoint>
    </Endpoints>
  </ServerConfiguration>
</S2OPC>
