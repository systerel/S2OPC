[ req ]
prompt              = no
distinguished_name  = tpm2_distinguished_name
string_mask         = utf8only
req_extensions      = req_ext

[ tpm2_distinguished_name ]
countryName         = FR
stateOrProvinceName = France
organizationName    = Systerel
commonName          = S2OPC Certificate for TPM2 Modules
emailAddress        = s2opc-support@systerel.fr

[ tpm2_cert_client ]
# Extensions for server certificates (`man x509v3_config`).
basicConstraints = CA:FALSE
subjectKeyIdentifier = hash
keyUsage = nonRepudiation, digitalSignature, keyEncipherment, dataEncipherment
extendedKeyUsage = clientAuth
subjectAltName = @alternate_names

[ tpm2_cert_server ]
# Extensions for server certificates (`man x509v3_config`).
basicConstraints = CA:FALSE
subjectKeyIdentifier = hash
keyUsage = nonRepudiation, digitalSignature, keyEncipherment, dataEncipherment
extendedKeyUsage = serverAuth
subjectAltName = @alternate_names

[ alternate_names ]
URI     = urn:S2OPC:localhost  # ApplicationUri
DNS.1   = localhost
