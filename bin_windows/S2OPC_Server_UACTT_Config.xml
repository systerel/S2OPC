<?xml version='1.0' encoding='utf-8'?>
<S2OPC xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="s2opc_config.xsd">
  <ServerConfiguration>
    <Namespaces>
      <Namespace uri="urn:S2OPC:localhost"/>
    </Namespaces>
    <ApplicationCertificates>
      <ServerCertificate path="./server_public/server_2k_cert.der"/>
      <ServerKey path="./server_private/server_2k_key.pem"/>
      <TrustedCertificates>
        <TrustedCertificate path="./trusted/cacert.der"/>
      </TrustedCertificates>
    </ApplicationCertificates>
    <ApplicationDescription>
      <ApplicationURI uri="urn:S2OPC:localhost"/>
      <ProductURI uri="urn:S2OPC:localhost"/>
      <ApplicationName text="S2OPC toolkit server example" locale="en"/>
    </ApplicationDescription>
    <Endpoints>
      <Endpoint url="opc.tcp://localhost:4841">
        <SecurityPolicies>
          <SecurityPolicy uri="http://opcfoundation.org/UA/SecurityPolicy#Basic256Sha256">
            <SecurityModes>
              <SecurityMode mode="Sign"/>
              <SecurityMode mode="SignAndEncrypt"/>
            </SecurityModes>
            <UserPolicies>
              <UserPolicy policyId="anonymous" tokenType="anonymous"/>
              <UserPolicy policyId="username" tokenType="username" securityUri="http://opcfoundation.org/UA/SecurityPolicy#None"/>
            </UserPolicies>
          </SecurityPolicy>
          <SecurityPolicy uri="http://opcfoundation.org/UA/SecurityPolicy#Basic256">
            <SecurityModes>
              <SecurityMode mode="Sign"/>
              <SecurityMode mode="SignAndEncrypt"/>
            </SecurityModes>
            <UserPolicies>
              <UserPolicy policyId="anonymous" tokenType="anonymous"/>
              <UserPolicy policyId="username" tokenType="username" securityUri="http://opcfoundation.org/UA/SecurityPolicy#None"/>
            </UserPolicies>
          </SecurityPolicy>
          <SecurityPolicy uri="http://opcfoundation.org/UA/SecurityPolicy#None">
            <SecurityModes>
              <SecurityMode mode="None"/>
            </SecurityModes>
            <UserPolicies>
              <UserPolicy policyId="anonymous" tokenType="anonymous"/>
              <!-- For tests only, otherwise users on unsecure channel without security shall be forbidden -->
              <UserPolicy policyId="username" tokenType="username" securityUri="http://opcfoundation.org/UA/SecurityPolicy#None"/>
            </UserPolicies>
          </SecurityPolicy>
        </SecurityPolicies>
      </Endpoint>
    </Endpoints>
  </ServerConfiguration>
</S2OPC>
