IMPLEMENTATION
    address_space_typing_i

REFINES
    address_space_typing_r

SEES
    constants

IMPORTS
    address_space_typing_bs

PROMOTES
    is_transitive_subtype

OPERATIONS

    bres <-- is_included_ValueRank(p_concValueRank, p_expValueRank) =
    BEGIN
        IF p_expValueRank = -3 THEN
            bres := bool(p_concValueRank = -1 or p_concValueRank = 1)
        ELSIF p_expValueRank = -2 THEN
            bres := TRUE
        ELSIF p_expValueRank = -1 THEN
            bres := bool(p_concValueRank = -1)
        ELSIF p_expValueRank = 0 THEN
            bres := bool(p_concValueRank >= 1)
        ELSE /* > 0 (or < -3 => not a valid rank, it will fail ..) */
            bres := bool(p_expValueRank = p_concValueRank)
        END
    END

END
